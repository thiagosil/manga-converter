!!! 5
%html
  %html
  %head 
    %title Select a manga

  %link{:rel =>"stylesheet", :href => "css/bootstrap.css"}
  %script{:type => "text/javascript", :src =>"javascript/jquery-1.8.3.js"}
  %script{:type => "text/javascript", :src =>"javascript/paginate.js"}

  %body
    %input{:type => "hidden", :id => "current_page"}
    %input{:type => "hidden", :id => "show_per_page"}
    %table{:class => "table table-hover", :id => "mangas_table"}
      %tbody
        - @mangas.each do |manga|
          %tr
            %td 
              %a{:id => manga.name, :href => "/mangas/#{manga.name}"}= manga.get_human_name

    %div{:class => 'pagination'}
      %ul{:class => "page_list"}

